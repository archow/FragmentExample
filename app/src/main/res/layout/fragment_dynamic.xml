<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DynamicFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/dynamic_fragment_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/dynamic_fragment_text" />

    <EditText
        android:id="@+id/info_back_to_activity_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/open_fragment_button" />

    <Button
        android:id="@+id/send_to_activity_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_info_back_to_activity"
        app:layout_constraintTop_toBottomOf="@+id/info_back_to_activity_et"/>

    <Button
        app:layout_constraintTop_toBottomOf="@id/dynamic_fragment_textview"
        android:id="@+id/open_fragment_button"
        android:text="@string/open_hello_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>